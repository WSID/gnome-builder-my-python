<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="IdeTweaks">
    <child internal-child="foundry_section">
      <object class="IdeTweaksSection">
        <child>
          <object class="IdeTweaksPage" id="python_venv_page">
            <property name="title">Python Virtual Environments</property>
            <child>
              <object class="IdeTweaksGroup">
                <!-- Caption -->
                <child>
                  <object class="IdeTweaksCaption">
                    <property name="text"> Hello Tweaks! </property>
                  </object>
                </child>

                <child>
                  <object class="IdeTweaksWidget">
                    <signal name="create-for-item" handler="list_item_create_for_item" object="GbmpPythonVenvTweaksAddin" swapped="false"/>
                  </object>
                </child>

                <child>
                  <object class="IdeTweaksWidget">
                    <signal name="create-for-item" handler="add_item_create_for_item" object="GbmpPythonVenvTweaksAddin" swapped="false"/>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
