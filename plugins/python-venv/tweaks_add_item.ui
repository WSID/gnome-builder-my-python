<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkBox" id="content">
    <property name="margin-top">12</property>
    <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
    <property name="homogeneous">true</property>
    <property name="spacing">24</property>

    <!-- Add Buttton : Add existing environment -->
    <child>
      <object class="GtkButton">
        <signal name="clicked" handler="add_button_clicked" object="GbmpPythonVenvTweaksAddin" swapped="false"/>
        <child>
          <object class="GtkLabel">
            <property name="label">Add Virtual Environment</property>
          </object>
        </child>
      </object>
    </child>

    <!-- Make Button : Make a python environment -->
    <child>
      <object class="GtkButton">
        <signal name="clicked" handler="make_button_clicked" object="GbmpPythonVenvTweaksAddin" swapped="false"/>
        <child>
          <object class="GtkLabel">
            <property name="label">Make Virtual Environment</property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
